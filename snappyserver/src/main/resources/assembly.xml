<assembly>
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <!-- 从目标目录拷贝文件去压缩 -->
        <fileSet>
            <directory>target</directory>
            <includes>
                <include>snappyserver.jar</include>
            </includes>
            <outputDirectory>/output/snappyserver/lib</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>/</directory>
            <includes>
                <include>README.md</include>
            </includes>
            <outputDirectory>/output/snappyserver</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>