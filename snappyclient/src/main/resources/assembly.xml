    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <!-- 从目标目录拷贝文件去压缩 -->
        <fileSet>
            <directory>target</directory>
            <includes>
                <include>snappyclient.jar</include>
            </includes>
            <outputDirectory>/output/snappyclient/lib</outputDirectory>
        </fileSet>


        <fileSet>
            <directory>/</directory>
            <includes>
                <include>README.md</include>
            </includes>
            <outputDirectory>/output/snappyclient</outputDirectory>
        </fileSet>

    </fileSets>
</assembly>